<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.user.tutandroidmysql.deleteMysql"

    android:orientation="vertical"
    android:background="@color/colortow">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="delete user by mysql"
        android:textSize="5mm"
        android:paddingTop="10dp"
        />

    <EditText
        android:id="@+id/id_mysql_delete_txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="enter user id"
        android:textSize="5mm"
        android:paddingTop="10mm"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="10mm"
        android:text="DELETE"
        android:onClick="deletebtn"
        />

</LinearLayout>